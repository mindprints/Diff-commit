{
  "name": "diff-commit-ai",
  "version": "2.0.1",
  "description": "A modern, interactive desktop application for comparing, reviewing, and refining text versions with AI-powered enhancements.",
  "author": "Diff & Commit AI Team",
  "main": "./out/main/index.js",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "start": "electron-vite preview",
    "build:win": "electron-vite build && electron-builder --win --x64",
    "build:web": "vite build src/renderer",
    "build:model-intel-core": "npm --prefix packages/model-intel-core run build"
  },
  "build": {
    "appId": "com.yourcompany.diffcommitai",
    "productName": "Diff & Commit AI",
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "public/icon.png",
        "to": "icon.png"
      },
      {
        "from": "public/dictionaries",
        "to": "dictionaries"
      }
    ]
  },
  "dependencies": {
    "@google/genai": "^1.30.0",
    "@types/turndown": "^5.0.6",
    "clsx": "^2.1.1",
    "dictionary-en": "^4.0.0",
    "diff": "^8.0.2",
    "dotenv": "^17.2.3",
    "electron-store": "^11.0.2",
    "lucide-react": "^0.555.0",
    "mammoth": "^1.11.0",
    "markdown-to-txt": "^2.0.1",
    "marked": "^17.0.1",
    "playwright": "^1.58.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "turndown": "^7.2.2",
    "typo-js": "^1.3.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.14.0",
    "@types/typo-js": "^1.2.2",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "globals": "^15.3.0",
    "jsdom": "^27.3.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.2",
    "typescript-eslint": "^7.11.0",
    "vite": "^6.2.0",
    "vitest": "^4.0.15",
    "wait-on": "^9.0.3"
  }
}
